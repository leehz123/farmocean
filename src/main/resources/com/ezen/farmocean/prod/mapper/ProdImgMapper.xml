<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ezen.farmocean.prod.mapper.ProdImgMapper">
	
	<insert id="insertImg">
		INSERT INTO prod_img(img_idx, prod_idx, img_url)
		VALUES(img_idx_seq.nextval, #{prod_idx}, #{img})
    </insert>

	<select id="getImgByProdId" resultType="com.ezen.farmocean.prod.dto.ProdImg">
		SELECT * FROM prod_img WHERE prod_idx = #{prod_idx}
	</select>		
</mapper>
